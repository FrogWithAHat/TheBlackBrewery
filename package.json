{
  "name": "homebrewery",
  "license": "MIT",
  "description": "Markdown editor for D&D homebrews",
  "version": "1.0.4",
  "author": "Noah Lange <noahrlange@gmail.com>",
  "dependencies": {
    "electron-store": "^1.3.0",
    "markdown-it": "^8.4.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-monaco-editor": "^0.12.0",
    "sanitize-html": "^1.15.0"
  },
  "devDependencies": {
    "@types/react": "^16.0.21",
    "electron": "^1.7.9",
    "electron-builder": "^19.45.4",
    "typescript": "^2.6.1"
  },
  "main": "main.js",
  "scripts": {
    "release": "npm run build && build --publish onTag",
    "sass": "sass --watch scss:assets",
    "start": "electron .",
    "build": "tsc",
    "watch": "tsc --watch"
  },
  "build": {
    "appId": "com.noahlange.homebrewery",
    "productName": "The Homebrewery",
    "directories": {
      "output": "dist"
    },
    "files": [
      "assets",
      "lib",
      "node_modules",
      "main.js",
      "public",
      "example.md",
      "package.json"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  }
}
